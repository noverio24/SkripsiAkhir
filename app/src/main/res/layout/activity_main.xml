<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image2"
    tools:context=".MainActivity">

   <TextView
       android:textColor="@color/white"
       android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginLeft="@dimen/_15sdp"
       android:textSize="@dimen/_20sdp"
       android:text="eClass"
       android:textStyle="bold"
       android:fontFamily="@font/poppins_bold"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>

   <TextView
       android:textColor="@color/white"
       android:layout_above="@id/txtDesc"
       android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginLeft="@dimen/_15sdp"
       android:textSize="@dimen/_13sdp"
       android:text="electronic ClassRomm"
       android:textStyle="bold"
       android:fontFamily="@font/poppins_blackitalic"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>


   <TextView
       android:textColor="@color/white"
       android:id="@+id/txtDesc"
       android:layout_above="@id/btnMahasiswa"
       android:layout_marginTop="@dimen/_15sdp"
       android:layout_marginLeft="@dimen/_15sdp"
       android:textSize="@dimen/_13sdp"
       android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. "
       android:textStyle="bold"
       android:fontFamily="@font/poppins_blackitalic"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>


   <Button
       android:id="@+id/btnMahasiswa"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_above="@id/btnDosen"
       android:layout_marginHorizontal="@dimen/_15sdp"
       android:layout_marginBottom="@dimen/_15sdp"
       android:backgroundTint="@color/purple_200"
       android:fontFamily="@font/poppins_bold"
       android:text="Mahasiswa" />


   <Button
       android:id="@+id/btnDosen"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginHorizontal="@dimen/_15sdp"
       android:layout_marginBottom="@dimen/_15sdp"
       android:backgroundTint="@color/purple_200"
       android:fontFamily="@font/poppins_bold"
       android:text="Dosen" />

</RelativeLayout>